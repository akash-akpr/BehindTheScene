{
  "manifest_version": 2,
  "name": "Behind the Scene",
  "version": "1.0",
  "description": "Web extension to find details about scenes in TV/Movies.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons" : {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "tabs",
    "declarativeContent",
    "https://*.netflix.com/watch*",
    "storage"
  ],
  "page_action": {
    "default_icon" : "icon16.png",
    "default_popup" : "popup.html"
  }
}
