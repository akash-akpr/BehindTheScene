{
  "manifest_version": 3,
  "name": "Behind the Scene",
  "version": "1.0",
  "description": "Web extension to find details about scenes in TV/Movies.",
  "background": {
    "service_worker": "background.js"
  },
  "icons" : {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage"
  ],
  "host_permissions": [
    "https://*.netflix.com/watch*"
  ],
  "action": {
    "default_icon" : "icon16.png",
    "default_popup" : "popup.html"
  }
}
